<RecipeDefs>

	<RecipeDef>
		<defName>PJ_MakeCrystal_purp</defName>
		<label>refine lightsaber crystal (Purple)</label>
		<description>Treats raw materials into synthetic saber crystals.</description>
		<jobString>Refining crystals</jobString>
		<workAmount>600</workAmount>
		<workSpeedStat>StonecuttingSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneBlocks</li>
      </categories>
    </fixedIngredientFilter>
		<products>
			<PJ_KyberCrystalPurple>1</PJ_KyberCrystalPurple>
		</products>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>
	
