			<TradePriceImprovement>0.25</TradePriceImprovement>
			<SurgerySuccessChance>0.25</SurgerySuccessChance>
			<HealingQuality>0.30</HealingQuality>
			<HealingSpeed>0.3</HealingSpeed>
			<MedicalOperationSpeed>0.3</MedicalOperationSpeed>
			<WorkSpeedGlobal>0.05</WorkSpeedGlobal>
			<MiningSpeed>0.5</MiningSpeed>
			<SmithingSpeed>0.8</SmithingSpeed>
		</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
	    <li>Torso</li>
		<li>Arms</li>
        <li>Legs</li>
		<li>Shoulders</li>
      </bodyPartGroups>
	  <worngraphicPath>Robes/JediRobe</worngraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <commonality>0.001</commonality>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
