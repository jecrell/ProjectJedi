			<MoveSpeed>0.20</MoveSpeed>
			<PlantWorkSpeed>0.25</PlantWorkSpeed>
			<HarvestFailChance>-0.4</HarvestFailChance>
			<MentalBreakThreshold>-0.2</MentalBreakThreshold>
			<MeleeHitChance>0.35</MeleeHitChance>
